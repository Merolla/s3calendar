{
  "name": "S3 Calendar",
  "version": "1.1",
  "manifest_version": 2,

  "options_page": "options.html",
  "description": "di PV Solution - Copyright 2014 - This addons for Mozilla Firefox and Google Chrome provide a way to export events from Uniba-Esse3 to Google Calendar",
  "icons": { "256": "calendar.png" },
  
  "permissions": [
    "tabs","storage","resource","background","notifications"
  ],
   
   "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
	
  "web_accessible_resources": [
    "icon.png"
  ],
   
  "permissions": ["https://*.ict.uniba.it/*"],
    
   "content_scripts":
  [
    {
      "matches": ["https://*.ict.uniba.it/*"],
      "js":  ["main.js"]
    }
  ]
}